{
  // Development environment with Nvidia GPU target configuration
  "name": "ros2vsc-nvidia",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "ros2vsc-nvidia",
  // Start only this service
  "runServices": [
    "ros2vsc-nvidia"
  ],
  // Stop container if VS Code is shut down
  "shutdownAction": "stopCompose",
  // Configure the container's IDE
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "twxs.cmake",
        "ms-vscode.cmake-tools",
        "yzhang.markdown-all-in-one",
        "gruntfuggly.todo-tree",
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "davidanson.vscode-markdownlint",
        "dotjoshjohnson.xml",
        "timonwong.shellcheck",
        "aaron-bond.better-comments",
        "jeff-hykin.better-syntax",
        "donjayamanne.githistory",
        "shaharkazaz.git-merger",
        "basdp.language-gas-x86",
        "zachflower.uncrustify",
        "tomoki1207.pdf",
        "13xforever.language-x86-64-assembly",
        "redhat.vscode-yaml",
        "dan-c-underwood.arm",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "ms-iot.vscode-ros"
      ],
      "settings": {
        // Use Zsh also in VS Code
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        }
      }
    }
  },
  // Start the VS Code instance in the container's workspace
  "workspaceFolder": "/home/ros/workspace",
  // Creates a sleeping process that VSC uses to stop the container
  "overrideCommand": true
}